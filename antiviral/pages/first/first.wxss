}

.weui-cell_input {
  width: 550rpx;
  height: 70rpx;
  margin: 60rpx auto;
  background: #fff;
  border: 1px solid #4eb7c2;
  font-size: 16px;
  display: flex;
  align-items: center;
}

input {
  padding-left: 10rpx;
  width: 100%;
  height: 100%;
}

